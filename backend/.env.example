# ============================================
# Backend Environment Variables
# ============================================

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:5432/codfraud_db

# Redis (Railway provides REDIS_URL automatically)
REDIS_URL=redis://default:password@host:6379

# JWT
JWT_SECRET=your-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d

# ML Service (Railway internal networking)
ML_SERVICE_URL=http://ml-service.railway.internal:8000

# Webhook Secrets (from your e-commerce platforms)
SHOPIFY_WEBHOOK_SECRET=
WOOCOMMERCE_WEBHOOK_SECRET=
MAGENTO_WEBHOOK_SECRET=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Queue
QUEUE_CONCURRENCY=5

# CORS (comma-separated frontend URLs)
CORS_ORIGINS=https://your-frontend.vercel.app

# Encryption
API_KEY_ENCRYPTION_SECRET=your-32-byte-encryption-key-here!
